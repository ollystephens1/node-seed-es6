{
  "name": "node-seed-es6",
  "version": "1.0.0",
  "description": "Node.js API seed",
  "main": "src/server.js",
  "scripts": {
    "build:dev": "NODE_ENV=development webpack --config ./config/webpack.config.js --watch",
    "build:prod": "npm run clean && NODE_ENV=production webpack --config ./config/webpack.config.js",
    "clean": "rimraf dist/*",
    "eslint": "./node_modules/.bin/eslint ./src",
    "precommit": "npm run eslint",
    "start": "npm-run-all --parallel watch:server build:dev",
    "start:prod": "NODE_ENV=production node dist/server.bundle.js",
    "watch:server": "nodemon ./dist/server.bundle.js --watch ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ollystephens1/node-seed-es6"
  },
  "author": "Oliver Stephens",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "config": "^1.30.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "helmet": "^3.12.0",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.18.2",
    "husky": "^0.14.3",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.2.3",
    "webpack": "^3.11.0",
    "webpack-cli": "^2.0.11",
    "webpack-node-externals": "^1.6.0"
  }
}
